{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": ".tscache",
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "baseUrl": "./"
    },
    "include": ["src/**/*", "global.d.ts"],
    "exclude": ["node_modules", "dist"]
}
