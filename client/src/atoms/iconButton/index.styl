.icon-button
  display inline-flex
  align-items center
  justify-content center
  cursor pointer
  user-select none

  &:not(.disabled):active
    svg
      opacity 0.7
      filter: drop-shadow(2px 2px 2px rgba(0, 0, 0, 0.3)), drop-shadow(-2px -2px 2px rgba(255, 255, 255, 0.7));

  &.disabled
    cursor not-allowed
    svg
      fill: #b9b9b9;
