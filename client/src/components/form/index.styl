.form
  width 100%
  --form-label-width auto

  .form-item
    display flex
    min-height 30px
    padding 5px 0
    align-items center

    &.form-item-only
      padding 15px 0
      height auto

    .form-item-label
      color #777777
      width var(--form-label-width)
      font-size 14px
      text-align right
      flex-shrink 0

    .form-item-content
      display flex
      justify-content flex-start
      padding 1px 15px
      flex 1
      width 100%
      height 100%

      &.form-item-center
        align-items center
        justify-content center


