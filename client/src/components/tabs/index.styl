.components-tabs
  width 100%;
  height 100%
  display flex
  flex-direction column

  .tabs-pane-list
    display flex
    height 28px
    background #3d526c
    border-bottom solid 1px #FFFFFF
    padding 6px 10px 0 10px
    position relative

    .tabs-pane-item
      padding 5px 20px
      font-size 13px
      cursor pointer
      color #c9dbfc
      border-radius 5px 5px 0 0
      position relative
      user-select none
      --pseudo-visible none
      --pseudo-color #FFFFFF

      &:before, &:after
        position absolute
        bottom 0
        content ''
        width 10px
        height 10px
        border-radius 100%
        box-shadow 0 0 0 20px var(--pseudo-color) /*使用box-shadow不影响尺寸*/
        display var(--pseudo-visible)

      &.active, &:hover
        --pseudo-visible initial
        &:before
          left: -10px;
          clip-path: inset(50% -10px 0 50%);

        &:after
          right: -10px;
          clip-path: inset(50% 50% 0 -10px);

      &:hover
        color #c9dbfc
        background-color #5e7da9
        --pseudo-color @background-color
        z-index 0

      &.active
        background-color #FFFFFF
        color #424242
        position relative
        --pseudo-color @background-color
        z-index 1

