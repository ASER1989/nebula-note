.moduleNameTip
  text-align left

.module-table
  &.editor-container
    display flex
    flex-direction column
    height 100%
    &.full-screen
      position absolute
      width 100%
      left 0
      top 0
      z-index 10
      background #FFFFFF

    .editor-header
      font-size 14px
      height 26px
      background #7db5d1
      border-top-left-radius 3px
      border-top-right-radius 3px
      border-bottom 0
      text-align left
      padding 0 8px
      color #ffffff
      cursor pointer
      display flex
      justify-content space-between
      align-items center
      .editor-win-tool
        font-size 20px
    .editor-box
      flex 1
      overflow auto
      text-align left
