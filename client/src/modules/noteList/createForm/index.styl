.shared-template-save
  background #FFFFFF

  .operate-list
    width 300px
    display flex
    flex-direction column
    gap 15px
    padding 15px

    .operate
      height 40px
      display flex
      flex-grow 1
      justify-content center
      align-items center
      border solid 1px #f0f0f0
      box-sizing border-box
      border-radius 4px
      cursor pointer
      --operate-drop-color #d74900
      color #FFFFFF
      user-select none

      &:hover
        filter drop-shadow(0 0 3px var(--operate-drop-color))
        color #e9e9e9

      &.save
        background var(--operate-drop-color)

      &.save-as
        --operate-drop-color: #4b9b8c
        background var(--operate-drop-color)

  .save-as-form
    width 500px
    height 210px
    padding 10px 20px
    box-sizing border-box

    .button-group
      display flex
      justify-content center
      gap 15px
      padding-top 30px
