.nebula-input
  outline 0
  box-sizing border-box
  width 100%
  border solid 1px #777777
  border-radius var(--atoms-border-radius)
  padding 0 10px
  position relative
  height var(--input-height)
  transition border-color linear .35s

  &.tiny
    --input-height 20px

  &.small
    --input-height 25px

  &.medium
    --input-height 30px

  &.large
    --input-height 35px

  &.height-light
    text-shadow 0 0 5px yellow, 0 0 10px yellow, 0 0 15px yellow

  &:focus, &:hover
    color black
    text-shadow: 0 0 0 #000000, 0 0 0 #777777
    box-shadow: 0 0 1px 0px #ffffff
    border-color var(--border-color)

&.border-none
  border 0
