.nebula-dialog
  &.mask
    position fixed
    width 100%
    height 100%
    left 0
    top 0
    z-index 998
    background rgba(0, 0, 0, 0.2)
    transition background .3s

    &.hide
      background transparent

  &.dialog-panel
    position fixed
    z-index 999
    height 100%
    width 100%
    top 0
    right 0
    background transparent
    display flex
    justify-content center
    align-items center

    .dialog-container
      transition transform .2s
      overflow auto
      border-radius 2px
      box-shadow: 0 0 5px #777;

      &.hide
        transform scaleY(0)

      .dialog-title
        display flex
        justify-content space-between
        height 35px
        align-items center
        padding 0 10px
        border-bottom solid 1px #c0c0c0
        position relative
        z-index 1
        background #2796c1
        color #FFFFFF

        .dialog-title-operation
          cursor pointer

          &:hover
            color #FFFFFF
            filter drop-shadow(0px 0px 1px black)

      .dialog-content
        padding 0 0
        background #FFFFFF

