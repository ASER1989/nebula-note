{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "lib": ["DOM", "esnext"],
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist/types",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "incremental": true,
        "outDir": "dist",
        "paths": {
            "@ui/*": ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
