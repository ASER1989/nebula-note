.note-list
  display flex
  flex-direction column
  max-height 100vh
  overflow hidden

  > *
    box-sizing border-box

  .note-list-drag_box
    border-bottom solid 1px #cccccc
    box-shadow none
    border-width: 0
    border-bottom-width: 1px
    border-radius: 0

    &:hover, &.checked
      background-color #eeeeee
      .drag-handle
        opacity 1
    .drag-handle
      opacity 0
      transition opacity .3s

  .note-list-item
    padding 12px 3px 12px 0
    cursor pointer
    display flex
    justify-content flex-start
    align-items center
    position relative

    &:hover, &.checked
      background-color #eeeeee

    .item-tag
      width 20px

    .item-name
      font-weight bold
      text-align left
      flex 1

    .item-operation
      width 49px
      display flex
      align-items center
      padding-left 3px
      position relative

.note-list-header
  height 35px
  box-sizing border-box
  background var(--content-head-bg)
  padding 5px 10px 5px var(--app-head-left-padding, 5px)
  line-height 0
  -webkit-app-region drag
  transition padding 0.2s ease-out

.note-tabs-title
  padding 5px 20px
  transition transform .3s
  transform translateY(var(--tab-nav-title-translateY, 0))

  &.editable
    padding 5px 20px 5px 10px

  .note-editable-title
    outline none
    min-width 20px
.note-content-empty
  background url(/assets/svg/home-bg.svg) no-repeat
  height 100%
  background-size auto 70%
  background-position right bottom 
  box-sizing border-box
  position relative

  .empty-header
    height 35px
    background var(--content-head-bg)

  .empty-tip
    color: rgba(0, 0, 0, 0.3);
    position absolute
    left 10px
    bottom 10px
    text-align left