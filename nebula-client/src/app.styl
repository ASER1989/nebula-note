#root {
  flex: 1;
  margin: 0 auto;
  padding: 0;
  text-align: center;
  display: flex;
}

.app_layout
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #e0e0e0;
  height: 100vh;
  width: 100vw;
  --layout-header-height: 50px;
  --layout-footer-height: 25px;
  --layout-content-height: calc(100vh - var(--layout-header-height) - var(--layout-footer-height));

.app_layout_header
  display: flex;
  padding: 10px 0;
  height: var(--layout-header-height);
  line-height: var(--layout-header-height);
  background: #213547;
  box-sizing: border-box;
  -webkit-app-region: drag


.app_layout_content
  flex: 1;
  height: var(--layout-content-height);
  position: relative;
  overflow-x hidden


.app_layout_footer
  color: #333;
  font-size: 13px;
  border-top: solid 1px #bbbbbb;
  display: flex;
  justify-content: space-between;
  gap: 15px;
  align-items: center;
  height: var(--layout-footer-height);
  padding: 0 15px;

  .app_layout_footer_copyright
    display: flex;
    justify-content: flex-start;
    gap: 15px;
    font-size 13px

    > div
      cursor: default;
      border-right: solid 1px #c1bfbf;
      padding-right: 15px;
      line-height 1
      font-family Arial

      &:last-child
        border: none;


  .app_layout_footer_operation
    display: flex;
    justify-content: flex-end;
    gap: 15px;
    flex 1

    .app_operation_box
      display flex
      align-items center

      &.align-end
        align-items flex-end

    .app_operate
      font-size 16px
      cursor pointer
      color #545454
      animation operate-active 6s infinite linear;
      animation-play-state paused

      &.filecode
        animation operate-breathe 1s infinite cubic-bezier(0.77, 0.02, 0.34, 0.85)
        animation-play-state paused

      &:hover
        filter drop-shadow(1px 1px 1px #7e7e7e)

      &.active
        animation-play-state running
        color black

        &:hover
          filter unset


.logo
  transition: all 300ms;
  color: #ffffff;
  font-size: 32px;
  cursor: pointer;
  font-family: serif;
  position: relative;
  width: 230px;
  height: 26px;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-app-region: no-drag;

  &:hover
    text-shadow: 1px 1px 2px #ffffff,
            0 0 0.2em #61dafbaa;
    font-size: 34px;


@keyframes operate-active {
  from {
    transform rotateZ(0deg);
  }
  to {
    transform rotateZ(359deg);
  }
}

@keyframes operate-breathe {
  from {
    background: #ffffff;
    box-shadow: 0 0 5px 2px #ffffff;
  }
  to {
    background transparent;
    box-shadow transparent;
  }
}
