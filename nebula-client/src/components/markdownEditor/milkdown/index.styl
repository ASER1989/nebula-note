.nebula-markdown
  text-align left
  height 100%
  position relative;
  overflow-y auto
  scrollbar-gutter: stable;
  overscroll-behavior: contain;
  scroll-behavior: smooth;
  --milkdown-menu-max-height calc(100vh * 0.5)
  --font-scale var(--global-font-scale,1)

  .cm-scroller
    .cm-content
      padding-top 10px

  table
    border-radius 5px
    overflow hidden
    box-shadow 0 0 0 1px rgba(0, 0, 0, 0.1)

    th
      background-color #f0f0f0
      color #555
      font-weight 500

      p
        color #555

  .milkdown
    --crepe-color-surface #f7f7f7ea

    .ProseMirror
      padding 20px 50px 60px 70px
      font-size calc(14px * var(--font-scale))
      --crepe-font-title var(--global-font-family,'Open Sans, Helvetica Neue, Helvetica, Arial, 나눔바른고딕, Nanum Barun Gothic, 맑은고딕, Malgun Gothic, sans-serif')
      --crepe-font-default var(--global-font-family,'Open Sans, Helvetica Neue, Helvetica, Arial, 나눔바른고딕, Nanum Barun Gothic, 맑은고딕, Malgun Gothic, sans-serif')


      h1,h2,h3,h4,h5
        font-weight 700
        margin-top 0
      h1
        font-size calc(28px * var(--font-scale))
      h2
        font-size calc(23px * var(--font-scale))

      h3, h4
        font-size calc(19px * var(--font-scale))

      p, div, span, section, a, li,td
        font-size calc(14px * var(--font-scale))
        
    .milkdown-toolbar
      transform translateX(3px)
      align-items center
      padding 0 10px
      height 36px
      gap 3px

      .toolbar-item
        width 26px
        height @width
        display flex
        align-items center
        justify-content center
        padding 0
        margin 0
        --crepe-color-outline #666

    .milkdown-block-handle
      transform translateX(13px)

    .operation-item
      width 26px
      height @width
      display flex
      align-items center
      justify-content center

    .milkdown-slash-menu
      .tab-group
        padding 6px 6px 0

      .menu-groups
        padding 0 6px 6px
        max-height var(--milkdown-menu-max-height, 420px)

        .menu-group li
          gap 6px
          padding 6px 6px
