.component-code-editor
  text-align left
  &.editor-container
    display flex
    flex-direction column
    height 100%
    overflow hidden

    &.full-screen
      position absolute
      width 100%
      left 0
      top 0
      z-index 10
      background #FFFFFF

    .editor-header
      font-size 14px
      height 26px
      background #7db5d1
      border-top-left-radius 3px
      border-top-right-radius 3px
      border-bottom 0
      text-align left
      padding 0 8px
      color #ffffff
      cursor pointer
      display flex
      justify-content space-between
      align-items center
      .editor-title-bars
        display flex
        gap 10px
        .editor-title-bar
          font-size 20px
          display flex
          .lang-selector
            width 110px
            color #fff8dc

    .editor-box
      flex 1
      overflow auto
      text-align left
